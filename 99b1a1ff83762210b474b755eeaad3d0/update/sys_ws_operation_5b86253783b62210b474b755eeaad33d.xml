        <name>Remove Integration from CI</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {
    var ciSysId = request.pathParams.configuration_item_sys_id;

    if (!ciSysId) {
        response.setStatus(400);
        response.setBody({ success: false, error: "Missing configuration item sys_id." });
        return;
    }

    var ciGR = new GlideRecord('cmdb_ci');
    if (ciGR.get(ciSysId)) {
        ciGR.u_zenduty_integration = '';  // clear the field
        ciGR.update();

        response.setStatus(200);
        response.setBody({ success: true, message: "Integration unmapped successfully." });
    } else {
        response.setStatus(404);
        response.setBody({ success: false, error: "Configuration Item not found." });
    }

})(request, response);
]]></operation_script>
